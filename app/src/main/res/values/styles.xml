<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackLargeText" parent="BoldText">
        <item name="android:textColor">@color/textDarkPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlackMediumText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDarkSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackSmallText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDarkSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
